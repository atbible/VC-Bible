<!DOCTYPE html>
<html xmlns:ng="http://angularjs.org" ng-app="BibleUI">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Đọc Thánh Kinh!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block stylesheets %}{% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"/>

    <!-- AngularJS framework -->
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.15/angular.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.15/angular-resource.min.js"></script>
    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.11.0.js"></script>

    <!-- jQuery -->
    <script src="//cdn.jsdelivr.net/jquery/1.11.1/jquery.min.js"></script>
    <script src="//cdn.jsdelivr.net/jquery.ui/1.11.0/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="//cdn.jsdelivr.net/jquery.ui/1.11.0/themes/smoothness/jquery-ui.min.css" />

    <!-- Custom code -->
    <script src="{{ asset('bundles/andytruongbibleui/js/directives.js') }}"></script>
    <script src="{{ asset('bundles/andytruongbibleui/js/services.js') }}"></script>
    <script src="{{ asset('bundles/andytruongbibleui/js/app.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('bundles/andytruongbibleui/css/app.css') }}"/>
</head>
<body ng-controller="BibleUIController">
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <bible-nav></bible-nav>
        </div>
    </div>

    <div class="container bible-ui">
        {% block body %}
            {% verbatim %}
                <div>
                    <bible-ui></bible-ui>
                </div>
            {% endverbatim %}
        {% endblock %}
    </div>

    <div class="footer">
        <div class="container">
            <p class="text-muted"><a href="http://thanhkinhvietngu.net/">ThanhKinhVietNgu.net</a></p>
        </div>
    </div>

{% block javascripts %}{% endblock %}
</body></html>
