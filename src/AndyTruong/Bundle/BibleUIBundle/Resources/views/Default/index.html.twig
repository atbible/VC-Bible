<!DOCTYPE html>
<html xmlns:ng="http://angularjs.org" ng-app="BibleUI">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"/>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.15/angular.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.15/angular-resource.min.js"></script>
    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.11.0.js"></script>
    <script src="{{ asset('bundles/andytruongbibleui/js/directives.js') }}"></script>
    <script src="{{ asset('bundles/andytruongbibleui/js/services.js') }}"></script>
    <script src="{{ asset('bundles/andytruongbibleui/js/app.js') }}"></script>
    <style>
        a { cursor: pointer; }

        .bible-ui {
            font-family: Verdana,Arial,sans-serif;
            font-size: 1em;
        }

        .reading-area .books {
            width: 200px;
        }

        .reading-area .chapters {
            width: 120px;
        }

        .reading-area .verses {
            width: 850px;
        }

        .h-nav {
            margin: 0;
            padding: 0;
            list-style-type: none;
            font-size: 0.9em;
        }

        .h-nav a.active {
            font-weight: bold;
        }

        .verse {
            margin: 10px 15px;
        }

        .verse:hover {
            background: lightyellow;
        }

        .verse sup {
            top: 17px;
            position: relative;
        }

        .verse sup {
            display: block;
            left: -30px;
            top: 10px;
            width: 20px;
            text-align: right;
        }

        .highlight { background: lightyellow; }
    </style>
</head>
<body ng-controller="BibleUIController">
    <div class="navbar navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Thánh Kinh</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">{% block topNavContextVersion %}{% verbatim %}{{context.version.writing}}{% endverbatim %}{% endblock %}<span class="caret"></span></a>

                        <ul class="dropdown-menu" role="menu">
                            <li ng-repeat="version in versions">
                                <a ng-click="context.version = version; change.version()">{% block topNavVersion %}{% verbatim %}{{version.writing}}{% endverbatim %}{% endblock %}</a>
                            </li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">{% block topNavContextBook %}{% verbatim %}{{context.book[1]}}{% endverbatim %}{% endblock %}<span class="caret"></span></a>

                        <ul class="dropdown-menu" role="menu">
                            <li ng-repeat="book in books">
                                <a ng-click="context.book = book; change.book();">{% block topNavBook %}{% verbatim %}{{book[1]}} {% endverbatim %}{% endblock %}</a>
                            </li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">{% block topNavContextChapter %}{% verbatim %}Chương {{context.chapter}}{% endverbatim %}{% endblock %}<span class="caret"></span></a>

                        <ul class="dropdown-menu" role="menu">
                            <li ng-repeat="chapter in chapters">
                                <a ng-click="context.chapter = chapter; change.chapter();">{% block topNavChapter %}{% verbatim %}Chương {{chapter}}{% endverbatim %}{% endblock %}</a>
                            </li>
                        </ul>
                    </li>
                </ul>

                <form class="navbar-form navbar-right">
                    <input type="text" class="form-control" placeholder="Search...">
                </form>
            </div><!-- /.nav-collapse -->
        </div>
    </div>

    <div class="container bible-ui">
        {% block body %}
            {% verbatim %}
                <div>
                    <bible-ui></bible-ui>
                </div>
            {% endverbatim %}
        {% endblock %}
    </div>

    <div class="footer">
        <div class="container">
            <p class="text-muted">Web application created by <a href="http://v3k.net/">V3K.net</a></p>
        </div>
    </div>

{% block javascripts %}{% endblock %}
</body></html>
