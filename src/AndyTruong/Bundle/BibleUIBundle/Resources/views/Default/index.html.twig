<!DOCTYPE html>
<html xmlns:ng="http://angularjs.org" ng-app="BibleUI">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"/>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.15/angular.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.15/angular-resource.min.js"></script>
    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.11.0.js"></script>
    <script src="{{ asset('bundles/andytruongbibleui/js/directives.js') }}"></script>
    <script src="{{ asset('bundles/andytruongbibleui/js/services.js') }}"></script>
    <script src="{{ asset('bundles/andytruongbibleui/js/app.js') }}"></script>
    <style>
        a { cursor: pointer; }

        .bible-ui {
            font-family: Verdana,Arial,sans-serif;
            font-size: 1em;
            margin-top: 55px;
        }

        .reading-area .books { display: none; }
        .reading-area .chapters { display: none; }

        @media (min-width: 1200px) {
            .reading-area .books { display: block; width: 200px; }
            .reading-area .chapters { display: block; width: 120px; }
            .reading-area .verses { display: block; width: 765px; }
        }

        .h-nav {
            margin: 0;
            padding: 0;
            list-style-type: none;
            font-size: 0.9em;
        }

        .h-nav a.active {
            font-weight: bold;
        }

        .dropdown.chapter ul li {
            float: left;
        }

        .dropdown.chapter ul li a {
            display: block;
            font-size: 0.8em;
            padding: 0;
        }

        @media (min-width: 768px) {
            .dropdown.chapter ul { width: 312px; }
            .dropdown.chapter ul li a {
                width: 25px;
                height: 20px;
                margin: 3px;
                padding-top: 2px;
                background: #efefef;
                border: 1px solid darkgray;
                text-align: center;
            }

            .dropdown.chapter ul li a:hover {
                background: #ddd;
            }
        }

        .verse {
            margin: 10px 15px;
        }

        .verse:hover {
            background: lightyellow;
        }

        .verse sup {
            top: 17px;
            position: relative;
        }

        .verse sup {
            display: block;
            left: -30px;
            top: 10px;
            width: 20px;
            text-align: right;
        }

        .highlight { background: lightyellow; }
    </style>
</head>
<body ng-controller="BibleUIController">
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <bible-nav></bible-nav>
        </div>
    </div>

    <div class="container bible-ui">
        {% block body %}
            {% verbatim %}
                <div>
                    <bible-ui></bible-ui>
                </div>
            {% endverbatim %}
        {% endblock %}
    </div>

    <div class="footer">
        <div class="container">
            <p class="text-muted">Web application created by <a href="http://v3k.net/">V3K.net</a></p>
        </div>
    </div>

{% block javascripts %}{% endblock %}
</body></html>
